{
  "name": "@hakit/date-and-time",
  "version": "0.0.5",
  "description": "A collection of date & time related components, including digital and analog clocks, and many options for formatting date/time strings",
  "type": "module",
  "scripts": {
    "dev": "npx --package=@hakit/addon hakit-dev --port 5000",
    "type-check": "tsc --noEmit",
    "build": "npm run type-check && npx --package=@hakit/addon hakit-bundle",
    "create-component": "npx --package=@hakit/addon hakit-create-component"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@types/react": "^19.2.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@hakit/addon": "^0.0.24"
  }
}
